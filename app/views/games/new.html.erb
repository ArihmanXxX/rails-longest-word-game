<div class="container">
  <h1>New Game</h1>
    <div class="d-flex mb-5">
      <% @letters.each do |letter| %>
        <p class="border m-3 w-25 text-center text-white bg-primary"><%= letter %></p>
      <% end %>
  </div>
  <p>What is the longest word you can find ?</p>
  <div class="user-input">
    <form class="form" action="/score" method="post" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid, @letters %>
      <input type="text" name="word" class="form-control">
      <input type="submit" value="Play" class="form-control btn btn-primary">
    </form>
  </div>
</div>
